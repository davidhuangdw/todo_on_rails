- provide :title, "teams"
.page-header
  = link_to new_team_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Team
  %h1 Listing teams

= paginate @teams
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Team's Name
        %th
        %th

    %tbody
      - @teams.each do |team|
        %tr
          %td= link_to team.name, team
          %td= link_to 'Edit', edit_team_path(team)
          %td= link_to 'Destroy', team, :data => { confirm: 'Are you sure?' }, :method => :delete
